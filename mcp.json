{
  "version": "1.0.0",
  "description": "MCP tool configuration file",
  "servers": {
    "robertheadley/chrome-debug-mcp": {
      "command": "npx",
      "args": [
        "mcp-remote",
        "--transport",
        "http-only"
      ],
      "env": {}
    },
    "Sentry": {
      "command": "npx",
      "args": [
        "mcp-remote",
        "https://mcp.sentry.dev/sse",
        "--transport",
        "http-only"
      ],
      "env": {}
    }
  }
}